<%= form_for @citizen do |f| %>

  <ul>
    <% @citizen.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :occupation %>
  <%= f.text_field :occupation %>

  <%= f.label :city_id %>
  <%= f.text_field :city_id %>

  <%= f.submit "Create" %>
<% end %>
